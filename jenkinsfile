pipeline {
    agent any

    stages {
        stage('Clonar reposit√≥rio') {
            steps {
                git branch: 'main', url: 'https://github.com/rodrigoknova/AppiumWebDriverIO.git'
            }
        }
        stage('Instalar dependencias') {
            steps {
                  sh 'npm install'
            }
            
        stage('Executar Testes') {
            steps {
                 sh 'NO_COLOR=1 npm run wdio'
            }
        
        
    }
}